<header class="page-header">
	<div class="w-full bg-tertiary">
		<div class="w-full container relative flex flex-wrap items-center sm:justify-end xxs:justify-around py-2 min-w-searchbox">
			<div class="flex items-center js-search-hide">
				{% include '_site/_snippet/_nav/_service.twig' %}
				{% include "_site/_snippet/_nav/_language" %}
			</div>
			{#{% include "_site/_snippet/_global/_search.twig" %}#}
		</div>
	</div>

	<div class="w-full container ">
		<div class="w-full flex items-center justify-between xxs:py-3 xl:py-0">
			{% if not systemOffline %}
				<div class="flex items-center">
					<a href="{{ siteUrl }}" class="">
					{{ svg('logo.svg')|attr({ class: 'w-10 max-w-logo', role: 'img', 'aria-label': 'homepage' }) }}
					</a>
					<a href="{{ siteUrl }}" class="px-6 xxs:hidden sm:flex">
					{{ svg('logo-vlaanderen.svg')|attr({ class: 'w-10 max-w-logo', role: 'img', 'aria-label': 'homepage' }) }}
					</a>
				</div>

				<div class="w-full flex-col hidden xl:flex">
					{% set flyoutClasses = false %}
					{% include '_site/_snippet/_nav/_main.twig' with {'flyotClasses' : flyoutClasses} %}
					
				</div>

				<div class="flex items-center">
					<a href="#flyout" class="text-3xl js-flyout-toggle xl:hidden ie-hidden print:hidden" role="button">
						<span class="sr-only">{{"Menu"|t}}</span>
						{{ svg('@webroot/frontend/icons/menu.svg')|attr({class: 'icon '}) }}
					</a>
				</div>
			{% endif %}
		</div>
	</div>
</header>
