<header class="page-header">
	<div class="w-full bg-tertiary">
		<div class="w-full container relative flex flex-wrap items-center justify-end py-2 min-w-searchbox">
			<div class="flex items-center js-search-hide">
				{% include '_site/_snippet/_nav/_service.twig' %}
				{% include "_site/_snippet/_nav/_language" %}
			</div>
			{#{% include "_site/_snippet/_global/_search.twig" %}#}
		</div>
	</div>

	<div class="w-full container">
		<div class="w-full flex items-center justify-between md:items-stretch">
			{% if not systemOffline %}
				<div class="w-full flex-col items-end hidden md:flex">
					{% include '_site/_snippet/_nav/_main.twig' %}
				</div>
				<a href="#flyout" class="text-3xl js-flyout-toggle md:hidden ie-hidden print:hidden" role="button">
					<span class="sr-only">{{"Menu"|t}}</span>
					{{ svg('@webroot/frontend/icons/menu.svg')|attr({class: 'icon '}) }}
				</a>
			{% endif %}
		</div>
	</div>
</header>
