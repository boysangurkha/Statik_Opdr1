
{% if filledInValue is not defined %}
	{% set filledInValue = false %}
{% endif %}

{% set searchResultsEntry = craft.entries.section('searchResults').one() %}
{% if searchResultsEntry %}
	<form action="{{ searchResultsEntry.getUrl() }}" class=" py-2 ">

		{# - - - #}
			{# TODO enable this if you have a Google search / remove this if you are using a Craft search  #}
			{# - <input type="hidden" name="cx" value="{{ craft.app.config.custom.cse[currentSite.handle] }}"/>
				 <input type="hidden" name="ie" value="UTF-8"/> - #}
		{# - - - #}

		<div class="flex">
			<input type="search" class="flex-1 px-1 text-base border-black border-1 rounded-xs" name="q" placeholder="{{ 'Zoeken'|t }}"
			{% if filledInValue %}value="{{ filledInValue }}"{% endif %}/>
			<button type="submit" class="bg-primary w-6 h-6 text-md transition ease-in-out duration-200 hover:bg-primary-hover rounded-full cursor-pointer text-white js-search-trigger js-search-animated">
				<span class="sr-only">{{ 'Zoeken'|t }}</span>
				{{ svg('@webroot/frontend/icons/magnify.svg')|attr({class: 'icon '}) }}
			</button>
		</div>
	</form>
{% endif %}
