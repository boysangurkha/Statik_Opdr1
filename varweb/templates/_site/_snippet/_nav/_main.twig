{% set mainNav = craft.navigate.raw('mainNav') %}
{% set searchResultsEntry = craft.entries.section('searchResults').one() %}


{% if mainNav|length %}
	<nav class=" w-full flex {% if flyoutClasses %} flex-col{% else %} navigatie flex-row items-center justify-end h-full relative {% endif %}  " aria-label="{{ 'Main'|t }}">


		
		<ul class="flex text-pitchblack {% if flyoutClasses %} flex-col {% else %} flex-row space-x-5 items-center  {% endif %} " >
			{% for node in mainNav %}
				<li class="{% if flyoutClasses %} mt-0 {% else %} mt-6  {% endif %} {% if node.classes|length %}{{ node.classes }}{% endif %}">
					<a href="{{ node.url }}" class="font-sans flex items-center  {% if flyoutClasses %}mb-4 text-md {% else %} pb-6 text-md {% endif %} hover:no-underline {% if node.active %}active{% endif %}" {% if node.blank %} target="_blank" rel="noopener" {% endif %}>{{ node.name }}
					</a>
				</li>
			{% endfor %}
			 {#{% if searchResultsEntry %} 
		               <li>
			                    {% include '_site/_snippet/_global/_search' %}
			             </li>
			 {% endif %} #}
		</ul>
		{#<div class="{% if flyoutClasses %} mt-6 {% else %} xl:ml-5 xs:mr-4 xl:mr-0 {% endif %}">
			<button class="bg-primary transition ease-in-out duration-200 hover:bg-primary-hover {% if flyoutClasses %} w-7 h-7 text-lg {% else %} w-6 h-6 text-sm {% endif %} rounded-full cursor-pointer text-white js-search-trigger js-search-animated">
				<span class="sr-only">{{ 'Zoeken'|t }}</span>
				{{ svg('@webroot/frontend/icons/magnify.svg')|attr({class: 'icon '}) }}
			</button>
		</div>#}
		{% if flyoutClasses %}
		{% else %}
		<div class="ml-5">
		{% include '_site/_snippet/_global/_search' %}
		</div>
		{% endif %}
	</nav>
{% endif %}
