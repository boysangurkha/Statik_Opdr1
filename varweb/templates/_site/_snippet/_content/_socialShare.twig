<div class="flex">
        <h3 class="text-xxs font-serif font-medium mt-2">{{ 'Volg ons via'|t }}</h3>
        <ul class="flex ml-2">
            <li class="">
                <a href="https://twitter.com/intent/tweet?text={{ entry.title }} -&&url={{ entry.getUrl() }}"
                onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=600'); return false;" class="inline-block p-2 text-primary nav__link--twitter hover:text-secondary" title="Share on Twitter">
                    {{ svg('@webroot/frontend/icons/twitter.svg')|attr({class: 'icon'}) }}
                    <span class="sr-only">{{ 'Twitter'|t }}</span>
                </a>
            </li>
            <li class="">
                <a href="https://www.linkedin.com/shareArticle?mini=false&url={{ entry.getUrl() }}&title={{ entry.title }}
    &summary={{ entry.intro|striptags }}&source={{ systemName }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=600'); return false;" class="inline-block p-2 text-primary nav__link--twitter hover:text-secondary" title="Share on LinkedIn">
                    {{ svg('@webroot/frontend/icons/linkedin.svg')|attr({class: 'icon'}) }}
                    <span class="sr-only">{{ 'LinkedIn'|t }}</span>
                </a>
            </li>
        </ul>
</div>