{% if showInColumns is not defined %}
    {% set showInColumns = true %}
{% endif %}
{% if showDate is not defined %}
    {% set showDate = false %}
{% endif %}


<div class=" flex first-letter:w-full bg-offwhite">
<a class="w-full
" href="#">

    <div class="card pb-5 group hover:bg-primary relative flex flex-col w-full min-h-full overflow-hidden cursor-pointer card  group {% if not showInColumns %}md:flex-row flex-wrap {% endif %}">
        {% set title = impactEntry.title %}
        <div class="group-hover:text-white w-full flex flex-col flex-auto  p-4{% if not showInColumns %}md:w-1/2{% endif %}">
            <h3 class="mb-1 font-serif text-lg font-medium group-hover:underline decoration-1 underline-offset-2	">
                <div class="underline-offset-2 underline [@supports(background:paint(something))]:transition [@supports(background:paint(something))]:duration-300 link--extended decoration-transparent decoration-0 hover:decoration-current">{{ impactEntry.overviewTitle ?? title }}</div>
            </h3>

            <div class="group-hover:text-white cardDate py-1 font-sans text-xxs font-normal text-gray flex">
            <svg class="mt-0.4 mr-0.4 vector fill-gray group-hover:fill-white" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8.75 6.5H7.25V3.5H8.75V6.5ZM8.75 8H7.25V9.5H8.75V8ZM15.5 2V11C15.5 11.3978 15.342 11.7794 15.0607 12.0607C14.7794 12.342 14.3978 12.5 14 12.5H3.5L0.5 15.5V2C0.5 1.60218 0.658035 1.22064 0.93934 0.93934C1.22064 0.658035 1.60218 0.5 2 0.5H14C14.3978 0.5 14.7794 0.658035 15.0607 0.93934C15.342 1.22064 15.5 1.60218 15.5 2ZM14 2H2V11.9L2.9 11H14V2Z"/>
                    </svg>
                {{ impactEntry.dateCreated|date('F j, Y') }}
            </div>

            {% if impactEntry.overviewDescription|length or impactEntry.intro|length %}
                <div class="my-2 redactor font-sans font-normal">
                    
                    {{ impactEntry.overviewDescription ?? (impactEntry.intro ?? '') }}
                </div> 
            {% endif %}
            
        </div>
    </div>
    </a>
</div>
